<div style="display: flex;">
    <div>
    <%= search_form_for(@q, url: days_path, method: :get) do |form| %>
        <%= form.search_field :moodword_or_moodrating_or_mooddate_or_moodjournal_eq, placeholder: "Search..." %>
        <%= form.submit "Search!" %>
    <% end %>
    </div>    

    <div>
    <%= search_form_for(@q, url: days_path, method: :get) do |form| %>
        <div class="hidden"><%= form.search_field :isbookmarked_eq, value: true %></div>
        <div style="margin-left: 6%;"><%= form.submit "Bookmarks" %></div>
    <% end %> 
    </div>    

    <div style="margin-left: 1%;">
    <%= search_form_for(@q, url: days_path, method: :get) do |form| %>
        <div class="hidden"><%= form.search_field :moodword_or_moodrating_or_mooddate_or_moodjournal_eq %></div>
        <div><%= form.submit "Remove bookmark filter" %></div>
    <% end %>
    </div> 
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

<body style="background-color:black;">

<div>
<%= pluralize(@moodresults.count, "Result") %>



<div class="container mt-4">
    <table class="table table-dark">
        <thead>
            <tr>
            <th><%= sort_link(@q, :mooddate, "Date", default_order: :mooddate) %></th>
            <th><%= sort_link(@q, :moodword, "Word") %></th>
            <th><%= sort_link(@q, :moodjournal, "Description") %></th>
            <th><%= sort_link(@q, :moodrating, "Rating") %></th>
            <th><%= sort_link(@q, :isbookmarked, "Bookmark") %></th>
            </tr>
        </thead>  
    <tbody>
        <% @moodresults.each do |d| %>
        <tr>
            <td><%= link_to d.mooddate, d %></td>
            <td><%= d.moodword %></td>
            <td><%= d.moodjournal.truncate_words(25) %></td>
            <td><%= d.moodrating %></td>
            <td >
                <%= form_for d do |f| %>
                <div style="background-color:#212529;" ><%= f.check_box :isbookmarked, checked_value: :true, unchecked_value: :false, onchange: "this.form.submit();" %></div>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>


</div>

</body>